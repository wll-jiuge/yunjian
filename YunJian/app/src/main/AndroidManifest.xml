<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunjian">
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 摄像头调用权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 读取内存权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddXunjianActivity"></activity>
        <activity android:name=".MineListActivity" />
        <activity android:name=".XunjianItemActivity" />
        <activity android:name=".First_NotificationActivity" />
        <activity android:name=".First_ResourceActivity" />
        <activity android:name=".First_LogInfomationActivity" />
        <activity android:name=".First_XunjianActivity" />
        <activity
            android:name=".LunchActivity"
            android:theme="@style/LunchStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Mine_Activity" />
        <activity android:name=".MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.yunjian.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>