<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25dp"
        android:background="@drawable/xunjian_current_xunjianxiangshape">

        <TextView
            android:id="@+id/xunjian_current_xunjianxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="巡检项" />
    </LinearLayout>

    <TextView
        android:id="@+id/xunjian_current_xunjianxiang_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方法"></TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/xunjian_current_std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>