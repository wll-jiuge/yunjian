<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddXunjianActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bgcolor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="新建质量诊断"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addxunjian_bgshape"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@color/xunjian_icon_color"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:text="工程" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <EditText
            android:layout_width="@dimen/dimen_138dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="6"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/add_check_pro"
            android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addxunjian_bgshape"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@color/xunjian_icon_color"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:text="工程" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:inputType="textPersonName" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/add_check_pro"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addxunjian_bgshape"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@color/xunjian_icon_color"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:text="工程" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:inputType="textPersonName" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/add_check_pro"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addxunjian_bgshape"
        android:layout_margin="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@color/xunjian_icon_color"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:text="问题描述" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:layout_width="@dimen/dimen_138dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:inputType="textPersonName" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_5dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/dimem_50dp"
            android:layout_height="@dimen/dimem_50dp"
            android:layout_gravity="right"
            app:srcCompat="@mipmap/ic_xunjian_camera" />

        <ImageView
            android:id="@+id/add_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/logo">
        </ImageView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="horizontal">
        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="@dimen/dimen_110dp"
            android:layout_height="@dimen/dimem_50dp"
            android:gravity="center"
            app:sb_alpha_pressed="40"
            app:sb_color_pressed="@color/toolbar_bgcolor"
            app:sb_color_unpressed="@color/edtext_normal"
            android:text="@string/tap_submit">
        </com.xuexiang.xui.widget.button.shadowbutton.ShadowButton>
        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="@dimen/dimen_110dp"
            android:layout_height="@dimen/dimem_50dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:gravity="center"
            app:sb_alpha_pressed="40"
            app:sb_color_pressed="@color/toolbar_bgcolor"
            app:sb_color_unpressed="@color/edtext_normal"
            android:text="@string/tap_save">
        </com.xuexiang.xui.widget.button.shadowbutton.ShadowButton>
        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="@dimen/dimen_110dp"
            android:layout_height="@dimen/dimem_50dp"
            android:gravity="center"
            app:sb_alpha_pressed="40"
            app:sb_color_pressed="@color/toolbar_bgcolor"
            app:sb_color_unpressed="@color/edtext_normal"
            android:text="@string/tap_return">
        </com.xuexiang.xui.widget.button.shadowbutton.ShadowButton>
    </LinearLayout>

</LinearLayout>