<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firstactivities.xunjianactivities.XunjianItemFinishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_backgroudshape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xunjian_finish_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务名称"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_backgroudshape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xunjian_finish_detail_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="描述"></TextView>
    </LinearLayout>

</LinearLayout>