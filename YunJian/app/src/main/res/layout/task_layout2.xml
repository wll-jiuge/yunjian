<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:background="@drawable/test_backgroudshape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/testIcon"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                app:srcCompat="@mipmap/ic_xunjian_item" />

            <TextView
                android:id="@+id/txt_test_tesname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="测试"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_test_testfangfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容1"
                android:textColor="#00FF00" />

            <TextView
                android:id="@+id/txt_test_teststandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容2"
                android:textColor="#00FF00" />

            <TextView
                android:id="@+id/txt_test_testxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容3"
                android:textColor="#00FF00" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>