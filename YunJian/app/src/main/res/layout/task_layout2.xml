<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:background="@drawable/test_backgroudshape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <View
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:background="#95f204">
            </View>

            <TextView
                android:id="@+id/txt_test_testname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="测试"
                android:textColor="#000000" />
        </LinearLayout>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#abb6c3"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_current_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容1"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_current_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容2"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_test_testxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容3"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/day_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="04—17"
                android:textColor="#95f204"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>