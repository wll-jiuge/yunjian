<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_bg1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yunjian.widget.RadiusImageBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bb_barPaddingBottom="10dp"
        app:bb_scale="0.4317"></com.yunjian.widget.RadiusImageBanner>

    <LinearLayout
        android:id="@+id/today_things"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_marginLeft="@dimen/dimen_11dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/today_shape"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/today_things_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:background="@drawable/today_things_title_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:text="@string/today_things_title"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_40dp" />

            <TextView
                android:id="@+id/today_things_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:text="@string/today_things_date1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_35dp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:background="@drawable/today_things_circleshape"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/today_things_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:text="@string/today_things_date2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_35dp" />

            <TextView
                android:id="@+id/today_things_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_things_week"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_45dp" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/dimen_300dp"
        android:layout_marginLeft="@dimen/dimen_11dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_25dp"
        android:background="@drawable/first_list"
        android:numColumns="2" />
</LinearLayout>