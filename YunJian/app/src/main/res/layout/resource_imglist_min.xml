<?xml version="1.0" encoding="utf-8"?>
<!--资源界面  图片布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen_10dp"
    android:padding="@dimen/dimen_5dp"
    android:background="@drawable/test_backgroudshape"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/resource_image_bigtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片名称" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:background="@drawable/resource_imageshape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resource_image"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                app:srcCompat="@drawable/img1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resource_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/resource_image_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/resource_image_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/resource_image_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>